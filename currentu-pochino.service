[Unit]
Description=Arduino Nano Powercut Listener
After=dev-serial-by\x2did-usb\x2d1a86.device
Wants=dev-serial-by\x2did-usb\x2d1a86.device

[Service]
Type=simple
ExecStart=/usr/bin/python3 /usr/local/bin/arduino_listener.py
Restart=on-failure
RestartSec=15

KillSignal=SIGINT
TimeoutStopSec=5

User=ilam
Group=dialout

Environment=PYTHONUNBUFFERED=1

NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true

[Install]
WantedBy=multi-user.target
